<Window x:Class="Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:Notes.Controls"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="550" 
        Width="910" 
        MinWidth="630"
        StateChanged="myWindow_StateChanged"
        LocationChanged="myWindow_LocationChanged"
        WindowStartupLocation="CenterScreen" 
        x:Name="myWindow">
    <Window.Resources>
        <Storyboard x:Key="TopPanelAnimation">
            <DoubleAnimation Storyboard.TargetName="TopPanel"
                             Storyboard.TargetProperty="Height"
                             Duration="0:0:0.6"
                             To="250"/>
            <DoubleAnimation Storyboard.TargetName="textField"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.6"
                             To="1.0"/>
            <DoubleAnimation Storyboard.TargetName="addButton"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:0.6"
                             Duration="0:0:0.3"
                             To="1.0"/>
            <DoubleAnimation Storyboard.TargetName="clearButton"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:0.6"
                             Duration="0:0:0.3"
                             To="1.0"/>
            <DoubleAnimation Storyboard.TargetName="dateButton"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:0.6"
                             Duration="0:0:0.3"
                             To="1.0"/>
            <DoubleAnimation Storyboard.TargetName="myDatePicker"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:0.6"
                             Duration="0:0:0.3"
                             To="1.0"/>
            <DoubleAnimation Storyboard.TargetName="myTimePicker"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:0.6"
                             Duration="0:0:0.3"
                             To="1.0"/>
            <DoubleAnimation Storyboard.TargetName="textBorder"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.3"
                             To="1.0"/>
        </Storyboard>

        <Storyboard x:Key="TopPanelAnimationReverse">
            <DoubleAnimation Storyboard.TargetName="TopPanel"
                             Storyboard.TargetProperty="Height"
                             BeginTime="0:0:0.18"
                             Duration="0:0:0.6"
                             To="80"/>
            <DoubleAnimation Storyboard.TargetName="addButton"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.2"
                             To="0"/>
            <DoubleAnimation Storyboard.TargetName="clearButton"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.2"
                             To="0"/>
            <DoubleAnimation Storyboard.TargetName="dateButton"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.2"
                             To="0"/>
            <DoubleAnimation Storyboard.TargetName="myDatePicker"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.2"
                             To="0"/>
            <DoubleAnimation Storyboard.TargetName="myTimePicker"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.2"
                             To="0"/>
            <DoubleAnimation Storyboard.TargetName="textField"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:0.18"
                             Duration="0:0:0.6"
                             To="0"/>
            <DoubleAnimation Storyboard.TargetName="textBorder"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:0.6"
                             Duration="0:0:0.3"
                             To="0"/>
        </Storyboard>

        <Storyboard x:Key="StatusAnimation">
            <DoubleAnimation Storyboard.TargetName="StatusInfo"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1.0"
                             Duration="0:0:1.2"
                             AutoReverse="True"/>
        </Storyboard>
        
        <Style x:Key="myButton" TargetType="Button">
            <Setter Property="Background" Value="#D9C9BA"/>
            <Setter Property="Foreground" Value="#101010"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                        CornerRadius="10"
                        Background="{TemplateBinding Background}"
                        BorderThickness="0">
                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger
                Property="IsMouseOver"
                Value="True">
                    <Setter
                    Property="Background"
                    Value="#8C6F65"/>
                    <Setter
                    Property="Cursor"
                    Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

