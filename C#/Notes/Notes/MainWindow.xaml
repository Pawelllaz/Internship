    </Window.Resources>
    <Grid
        Background="#F2ECE4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--<Grid
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="0"
            Grid.RowSpan="3"
            
            Background="#D9D9D9">
        </Grid>-->

        <Grid 
            x:Name="notesGrid"
            Background="#F2ECE4"
            Grid.Column="1"
            MinHeight="200"
            MinWidth="400"
            Grid.Row="1"
            Grid.RowSpan="2"
            HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    VerticalScrollBarVisibility="Hidden"
                    Grid.Column="0">
                <StackPanel
                    x:Name="scroll0">
                </StackPanel>
            </ScrollViewer>

            <ScrollViewer
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    VerticalScrollBarVisibility="Hidden"
                    Grid.Column="1">
                <StackPanel
                x:Name="scroll1">
                </StackPanel>
            </ScrollViewer>

            <ScrollViewer
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    VerticalScrollBarVisibility="Hidden"
                Grid.Column="2">
                <StackPanel
                x:Name="scroll2">
                </StackPanel>
            </ScrollViewer>
        </Grid>

            <Grid 
            Background="Aqua"
            Grid.Column="0"
            Grid.Row="1"
            Height="150"
            Margin="0,50,0,0">
            <TextBlock>
                unused left side
            </TextBlock>
        </Grid>
        <TextBlock  
            x:Name="rightButton"
            Background="Blue"
            Text="unused right side"
            Grid.Column="2"
            Grid.Row="1"
            Margin="0,50,0,0"/>

        <Popup x:Name="popup" PlacementTarget="{Binding ElementName=rightButton}"  Placement="Bottom" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" AllowsTransparency="True">
            <Border BorderBrush="Aqua" Width="150" Height="100" Background="Beige" CornerRadius="20">
                <Button x:Name="butt" Width="100" Height="40" Content="My button" />
            </Border>
        </Popup>

        <Grid
            x:Name="TopPanel"
            Height="80"
            Grid.Column="1"
            Grid.Row="0"
            Grid.RowSpan="2"
            MinWidth="400"
            VerticalAlignment="Top"
            Background="Transparent">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid 
                x:Name="TitleGrid" 
                Grid.Column="1"
                Height="Auto"
                VerticalAlignment="Top">
                <Border
                    x:Name="textBorder"
                    Margin="0,42,0,0"
                    CornerRadius="20"
                    Background="#BFADA3"
                    Opacity="0">
                    <TextBox
                        x:Name="textField"
                        Width="{Binding ElementName=TitleGrid, Path=ActualWidth}"
                        MinWidth="200"
                        Height="170"
                        Padding="10"
                        Opacity="1"
                        Text="{Binding NewNoteTxt}"
                        PreviewMouseDown="TxtName_PreviewMouseDown"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"/>
                </Border>
                <Border
                    VerticalAlignment="Top"
                    CornerRadius="20"
                    Margin="0,5,0,0"
                    Background="#BFADA3">
                    <TextBox
                        x:Name="titleField"
                        Width="{Binding ElementName=TitleGrid, Path=ActualWidth}"
                        Height="35"
                        BorderThickness="0"
                        VerticalContentAlignment="Center"
                        Padding="12,0,12,0"
                        Text="{Binding NewNoteTitle}"
                        FontSize="15"
                        PreviewMouseDown="TitleName_PreviewMouseDown"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        />
                </Border>
               
            </Grid>
            
            <Button 
                Style="{StaticResource myButton}"
                x:Name="addButton"
                Click="AddButtonClick"
                Margin="0,0,0,5"
                IsEnabled="False"
                Grid.Column="1"
                Content="default"
                Opacity="0"/>
            <Button
                Style="{StaticResource myButton}"
                x:Name="clearButton"
                Click="ClearButtonClick"
                Grid.Column="1"
                Margin="0,0,55,5"
                IsEnabled="False"
                Content="Cancel"
                Opacity="0"/>
            <Button
                Style="{StaticResource myButton}"
                x:Name="dateButton"
                Click="DateButtonClick"
                Grid.Column="1"
                Margin="0,0,110,5"
                IsEnabled="False"
                Content="Set date"
                Opacity="0"/>
            <DatePicker 
                x:Name="myDatePicker"
                Grid.Column="1"
                Width="100"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,165,0"
                Opacity="0"/>
            <materialDesign:TimePicker
                x:Name="myTimePicker"
                Grid.Column="1"
                Width="80"
                Height="25"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,275,0"
                Opacity="0"/>
        </Grid>

        <TextBlock
            x:Name="StatusInfo"
            Grid.Column="2"
            Grid.Row="0"
            Margin="0,5,0,0"
            Text="{Binding NoteStatus}"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="17"
            Foreground="#5F5D53"
            FontStyle="Italic"
            FontWeight="Black"
            TextWrapping="Wrap"
            Opacity="0">

        </TextBlock>

        <!--<controls:MyControl Grid.Row="1" Grid.Column="1" Width="100" Height="130" />-->
    </Grid>
</Window>
