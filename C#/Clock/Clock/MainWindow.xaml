<Window x:Class="Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="400" 
        Width="400" 
        x:Name="myWindow"
        WindowStartupLocation="CenterOwner" 
        Closing="Window_Closing"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent" ResizeMode="CanResize">
    <Window.Resources>
        <Storyboard x:Key="minuteLineAnimation" >
            <DoubleAnimation Storyboard.TargetName="minLine"
                                                         Storyboard.TargetProperty="Angle"
                                                         Duration="0:0:0.150"
                                                         By="6"/>

            <DoubleAnimation Storyboard.TargetName="minLine"
                                                         Storyboard.TargetProperty="Angle"
                                                         BeginTime="0:0:0.150"
                                                         Duration="0:0:0.100"
                                                         By="4" AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="hLineAnimation" >
            <DoubleAnimation Storyboard.TargetName="hLine"
                                                         Storyboard.TargetProperty="Angle"
                                                         Duration="0:0:2.8"
                                                         DecelerationRatio="0.5"
                                                         To="{Binding HAngle}"/>
        </Storyboard>
        
        <Storyboard x:Key="rightSprocketAnimation">
            <DoubleAnimation  Storyboard.TargetName="rightSprocket"
                                                         Storyboard.TargetProperty="Angle"
                                                         Duration="0:0:1"
                                                         By="100"/>
            <DoubleAnimation  Storyboard.TargetName="rightSprocket"
                                                         Storyboard.TargetProperty="Angle"
                                                         BeginTime="0:0:1"
                                                         Duration="0:0:0.5"
                                                         AutoReverse="True"
                                                         By="60"/>
        </Storyboard>

        <Storyboard x:Key="biSprocketAnimation">
            <DoubleAnimation  Storyboard.TargetName="bigSprocket"
                                                         Storyboard.TargetProperty="Angle"
                                                         Duration="0:0:9.5"
                                                         AccelerationRatio="0.5"
                                                         DecelerationRatio="0.5"
                                                         By="350"/>
        </Storyboard>
    </Window.Resources>
    <Viewbox Width="400" Height="400">
        <Grid>
            <Border
            Width="350"
            Height="350"
            BorderThickness="6"
            Background="Transparent"
            MouseMove="Border_MouseMove"    
            CornerRadius="175" Grid.RowSpan="2">
                <!--<Border.Background>
                    <ImageBrush
                        ImageSource="images/clock.png" />
                </Border.Background>-->
                <Grid>

                    <Image
                        Width="200" 
                        Height="200" 
                        Source="images\sprocket2.png"
                        RenderOptions.BitmapScalingMode="Fant"
                        Stretch="Fill"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RenderTransformOrigin=".5,.5"
                        Margin="1,1,30,40">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="bigSprocket"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                        <Image.Effect>
                            <BlurEffect Radius="3"></BlurEffect>
                        </Image.Effect>

                    </Image>

                 
                    <Image
                        Width="150" 
                        Height="150" 
                        Source="images\sprocket3.png"
                        RenderOptions.BitmapScalingMode="Fant"
                        Stretch="Fill"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RenderTransformOrigin=".5,.5"
                        Margin="85,145,5,20">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="rightSprocket"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                        <Image.Effect>
                            <BlurEffect Radius="2"></BlurEffect>
                        </Image.Effect>

                    </Image>

                    <Image
                        Width="480" 
                        Height="470" 
                        Source="images\clock.png"
                        RenderOptions.BitmapScalingMode="Fant"
                        Stretch="Fill"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RenderTransformOrigin=".5,.5"
                        Margin="0,0,0,0">

                    </Image>
                    
                    <Image
                        Width="100" 
                        Height="100" 
                        Source="images\sprocket1.png"
                        RenderOptions.BitmapScalingMode="Fant"
                        Stretch="Fill"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RenderTransformOrigin=".5,.5"
                        Margin="3,11,5,0">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="sprocket"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                        <Image.Effect>
                            <BlurEffect Radius="2"></BlurEffect>
                        </Image.Effect>
                        <Image.Triggers>
                            <EventTrigger RoutedEvent="Image.Loaded">
                                <BeginStoryboard>
                                    <Storyboard x:Name="sprocketAnimation">
                                        <DoubleAnimation  Storyboard.TargetName="sprocket"
                                                          Storyboard.TargetProperty="Angle"
                                                          Duration="0:0:7"
                                                          From="360"
                                                          To="0"
                                                          RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Image.Triggers>

                    </Image>

                    <Polyline
                    Points="0,20 0,123"
                    Stroke ="White"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    
                    StrokeThickness="3">
                        <Polyline.Effect>
                            <DropShadowEffect 
                                BlurRadius="10" 
                                ShadowDepth="10" 
                                Direction="{Binding ElementName=secLine, Path=Angle}">
                                
                            </DropShadowEffect>
                        </Polyline.Effect>
                        
                        <Polyline.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="0" CenterX="0" CenterY="175" x:Name="secLine"/>
                            </TransformGroup>
                        </Polyline.RenderTransform>
                    </Polyline>

                    <Polyline x:Name="minuteLine"
                    Points="0,40 1,124"
                    Stroke ="Blue"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    StrokeThickness="4">
                        <Polyline.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="0" CenterX="0" CenterY="175" x:Name="minLine"/>
                            </TransformGroup>
                        </Polyline.RenderTransform>
                        <Polyline.Effect>
                            <DropShadowEffect 
                                BlurRadius="17" 
                                ShadowDepth="10" 
                                Direction="{Binding ElementName=minLine, Path=Angle}">
                            </DropShadowEffect>
                        </Polyline.Effect>
                        <Polyline.Triggers>

                            <EventTrigger RoutedEvent="Polyline.Loaded">
                                <BeginStoryboard>
                                    <Storyboard x:Name="startAnimation">
                                        <DoubleAnimation Storyboard.TargetName="minLine"
                                                         Storyboard.TargetProperty="Angle"
                                                         Duration="0:0:1"
                                                         From="0"
                                                         To="{Binding MinuteAngle}" />
                                        <DoubleAnimation Storyboard.TargetName="hLine"
                                                         Storyboard.TargetProperty="Angle"
                                                         Duration="0:0:1"
                                                         From="0"
                                                         To="{Binding HAngle}" />
                                        <!--<DoubleAnimation Storyboard.TargetName="secLine"
                                                         Storyboard.TargetProperty="Angle"
                                                         Duration="0:0:1"
                                                         From="0"
                                                         To="{Binding SecondAngle}" />-->

                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Polyline.Triggers>
                    </Polyline>

                    <Polyline 
                        Points="0,55 0,123"
                        Stroke ="Red"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        StrokeThickness="5" >
                        <Polyline.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="0" CenterX="0" CenterY="175" x:Name="hLine"/>
                            </TransformGroup>
                        </Polyline.RenderTransform>
                        <Polyline.Effect>
                            <DropShadowEffect 
                                BlurRadius="17" 
                                ShadowDepth="10" 
                                Direction="{Binding ElementName=hLine, Path=Angle}">
                            </DropShadowEffect>
                        </Polyline.Effect>
                    </Polyline>

                    <!--<Polyline 
                        Points="350,175 330,175"
                        Stroke ="#f0dab1"
                        VerticalAlignment="Top"
                        StrokeLineJoin="Round"
                        HorizontalAlignment="Center"
                        StrokeThickness="3" >
             
                    </Polyline>

                    <Polyline 
                        Points="-155,175 -170,175"
                        Stroke ="#f0dab1"
                        VerticalAlignment="Top"
                        StrokeLineJoin="Round"
                        HorizontalAlignment="Center"
                        StrokeThickness="3" >

                    </Polyline>

                    <Polyline 
                        Points="0,0 0,15"
                        Stroke ="#f0dab1"
                        VerticalAlignment="Top"
                        StrokeLineJoin="Round"
                        HorizontalAlignment="Center"
                        StrokeThickness="3" >

                    </Polyline>

                    <Polyline 
                        Points="0,325 0,350"
                        Stroke ="#f0dab1"
                        VerticalAlignment="Top"
                        StrokeLineJoin="Round"
                        HorizontalAlignment="Center"
                        StrokeThickness="3" >

                    </Polyline>-->
                </Grid>
            </Border>



        </Grid>

    </Viewbox>
</Window>
